generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGO_URI") // Prisma tomará la URL de tu archivo .env
}

// Modelo de Usuario
model User {
  id           String @id @default(auto()) @map("_id") @db.ObjectId
  email        String @unique
  name         String
  passwordHash String

  @@map("users") // Mapea este modelo a la colección "users" en MongoDB
}